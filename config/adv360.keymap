#define DEFAULT 0
#define NUMBERS 1
#define LSYM    2
#define RSYM    3
#define NAV     4
#define FN      5
#define MOD     6

/ {
    behaviors {
      #include "macros.dtsi"

      hm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          tapping-term-ms = <200>;
          quick_tap_ms = <175>;
          flavor = "tap-preferred";
          bindings = <&kp>, <&kp>;
      };
    };

  keymap {
    compatible = "zmk,keymap";

    default_layer {
      bindings = <
        &kp S     &kp N1    &kp N2    &kp N3   &kp N4     &kp N5 &tog 1                                                                           &mo MOD &kp N6 &kp N7   &kp N8    &kp N9      &kp N0      &kp MINUS
        &kp TAB   &kp Q     &kp W     &kp E    &kp R      &kp T  &none                                                                            &none   &kp Y  &kp U    &kp I     &kp O       &kp P       &kp BSLH
        &kp ESC   &kp A     &kp S     &kp D    &kp F      &kp G  &none           &none     &none   &none &none &none      &none                   &none   &kp H  &kp J    &kp K     &kp L       &kp SEMI    &kp SQT
        &kp LSHFT &kp Z     &kp X     &kp C    &kp V      &kp B         &none    &none     &none   &none &none &none      &none        &none              &kp N  &kp M    &kp COMMA &kp DOT     &kp FSLH    &kp RSHFT
        &none     &none     &kp RCTRL &none    &mo RSYM                 &kp LWIN &kp BSPC  &mo NAV             &kp ENTER  &lt FN SPACE &kp ENTER                 &mo LSYM &none     &kp LCTRL   &mo NUMBERS &none
      >;
    };
    numbers {
      bindings = <
        &trans &trans    &trans    &trans    &trans    &trans      &none                                                         &none &trans &trans &trans &trans &trans &trans 
        &trans &kp SLASH &kp N7    &kp N8    &kp N9    &kp PERCENT &none                                                         &none &trans &trans &trans &trans &trans &trans
        &trans &kp N0    &kp N1    &kp N2    &kp N3    &kp PERIOD  &none          &trans &trans &none &none &trans &trans        &none &trans &trans &trans &trans &trans &trans
        &trans &kp STAR  &kp N4    &kp N5    &kp N6    &kp ENTER           &none  &trans &none &none &trans &none  &none  &trans       &trans &trans &trans &trans &trans &trans
        &trans &trans    &kp MINUS &kp EQUAL &kp PLUS                      &trans &trans &trans             &trans &trans &trans              &trans &trans &trans &trans &trans
      >;
    };
    left_symbols {
      bindings = <
        &trans &trans    &trans    &trans    &trans    &trans      &none                                                    &none &trans &trans &trans &trans &trans &trans 
        &trans &trans    &kp COLON &kp LT    &kp GT    &kp SEMI    &none                                                    &none &trans &trans &trans &trans &trans &trans
        &trans &kp LBRC  &kp RBRC  &kp LPAR  &kp RPAR  &kp AT      &none         &none &none &none &none &none &none        &none &trans &trans &trans &trans &trans &trans
        &trans &trans    &kp EXCL  &kp LBKT  &kp RBKT  &trans              &none &none &none &none &none &none &none &none        &trans &trans &trans &trans &trans &trans
        &trans &trans    &trans    &trans    &trans                        &none &none &none             &none &none &none               &trans &trans &trans &trans &trans
      >;
    };
    right_symbols {
      bindings = <
        &trans &trans &trans &trans &trans &trans &none                                                              &none &trans   &trans    &trans   &trans    &trans     &trans 
        &trans &trans &trans &trans &trans &trans &none                                                              &none &trans   &kp UNDER &kp PIPE &kp SQT   &trans     &trans
        &trans &trans &trans &trans &trans &trans &none           &trans &trans &none &none &trans &trans            &none &kp HASH &kp TILDE &kp FSLH &kp DQT   &kp DOLLAR &trans
        &trans &trans &trans &trans &trans &trans          &none  &trans &none  &none &trans &none  &none &trans           &trans   &kp MINUS &kp BSLH &kp GRAVE &kp FSLH   &trans
        &trans &trans &trans &trans &trans                 &trans &trans &trans             &trans &trans &trans                    &trans    &trans   &trans    &trans     &trans
